{% extends "base.html.j2" %}


{% block body %}

{% include "examples.html.j2" %}

{% set prefill = error.is_some() %}


<div class="repl-output-container">
<div class="repl-output" id="repl-output">
{% match error %}
{% when Some with (e) %}
<div class="out-row error">
<div class="out-cmd">{{repl.statement}}</div>
<div class="out-result">{{e}}</div>
</div>
{% when None %}
<div class="out-row success">
<div class="out-cmd">{{repl.statement}}</div>
<div class="out-result">
{%- match output -%}
{%- when Some with (e) -%}
{{ e }}
{%- when None -%}
{%- endmatch -%}
</div>
</div>
{% endmatch %}
</div>
<a class="clear-button" href="/">clear</a>
</div>

{% include "repl.html.j2"%}

{% if false %}
<form class="example-list" action="." method="post">
<strong>Bags</strong>
{% for bag in bags %}
<button name="statement" value=".bag {{bag}}" class="example-button">{{bag}}</button>
{% endfor %}
</form>
{% endif %}

{% if vars.len() > 0 %}

<form class="binding-list" action="." method="post">
<strong>Current Bindings</strong>
<button name="statement" value=".clear" class="example-button">.clear</button>
{% for var in vars %}
<button name="statement" value="{{var}}" class="example-button">{{var}}</button>
{% endfor %}
</form>

{% endif %}



{% endblock body %}