{% extends "base.html.j2" %}


{% block body %}

<form class="repl-line" action="." method="post">
<span class="repl-prompt">&gt;&gt;</span>
<input class="repl-input" autofocus autocomplete="off" name="statement" value="" type="text">
<button class="repl-button">Eval</button>
</form>

<h2>&gt;&gt; {{repl.statement}}</h2>

{% match error %}
{% when Some with (e) %}
Error {{ e }}
{% when None %}
OK
{% endmatch %}

{% match output %}
{% when Some with (e) %}
<p>Output: {{ e }}</p>
{% when None %}
{% endmatch %}

{% endblock body %}